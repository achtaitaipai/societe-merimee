<header class="header">
    <a class="skipToContent" href='#main'>Passer au contenu</a>
    <a href="/" class="h1">Société Mérimée</a>
    <sausage-links>
        <button class="prev" data-color="neutral" hidden="hidden">
            <svg width="1em" height="1em" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                <use href="#previous"/>
            </svg>
        </button>
        <button class="next" data-color="neutral" hidden="hidden">
            <svg width="1em" height="1em" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                <use href="#next"/>
            </svg>
        </button>
        <nav class="mainNav">
            <ul role="list">
                {% for route in routes('/*') %}
                    {% set current="" %}
                    {% if title == route.data.title %}
                        {% set current="aria-current='true'" %}
                    {% endif %}
                    <li>
                        <a href="{{ route.url }}" {{ current }} class="mainNav_link">{{ route.data.title | title }}
                        </a>
                    </li>
                {% endfor %}
                {% for route in routes('/articles/*') %}
                    {% set current="" %}
                    {% if title == route.data.title or category == route.data.title %}
                        {% set current="aria-current='true'" %}
                    {% endif %}
                    <li>
                        <a href="{{ route.url }}" {{ current }} class="mainNav_link">{{ route.data.title | title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </header>